<GridLayout>:
    rows: 3
    cols: 1

    spacing: '20dp'

    RelativeLayout:

        Label:
            text: "Group Name"
            text_size: cm(20), cm(10)
            color: .2, .5, .4, 1
            font_size: "20sp"
            pos: (0,370)

        TextInput:
            hint_text: "Write Something..."
            multiline: True
            size_hint: (0.60, 0.14)
            pos_hint: {"top": .81, "x": 0.025}

        Button:
            text: "Post"
            font_size: "11sp"
            size_hint: (0.05, 0.01)
            pos: (460, 350)

        Label:
            text: "Please vote for a time to meet up: \n(3/4 members have voted) "
            halign: 'left'
            pos: (-250, 0)
            canvas.before:
                Color:
                    rgba: .2, .5, .4, 1
                Rectangle:
                    pos: (20, 160)
                    size: (500, 150)

        Label:
            text: "Post 2"
            halign: 'left'
            pos: (-345, -160)
            canvas.before:
                Color:
                    rgba: .2, .5, .4, 1
                Rectangle:
                    pos: (20, 65)
                    size: (500, 80)

        Label:
            text: "Group Information: \ngroup description about main goal and main interests "
            halign: 'left'
            pos: (-185, -260)
            canvas.before:
                Color:
                    rgba: .30, .5, .45, 1
                Rectangle:
                    pos: (20, -40)
                    size: (500, 90)

            BoxLayout:
                pos: (31, -35)
                Button:
                    text: "4"
                    background_color: (.2, .5, .4, 1)
                    size_hint: (0.30, 0.3)
                Button:
                    text: "1"
                    background_color: (.2, .5, .4, 1)
                    size_hint: (0.30, 0.3)
                Button:
                    text: "2"
                    background_color: (.2, .5, .4, 1)
                    size_hint: (0.30, 0.3)
                Button:
                    text: "3"
                    background_color: (.2, .5, .4, 1)
                    size_hint: (0.30, 0.3)