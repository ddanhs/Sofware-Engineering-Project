<GridLayout>:
    rows: 3
    cols: 1

    RelativeLayout:
        canvas.before:
            Color: 
                rgba : 0, 1, 0, 1
        
        Button:
            text: "Login"
            font_size: "20sp"
            background_color: (1, 0.5, 0.6, 1)
            color: (1, 1, 1, 1)
            size_hint: (0.20, 0.2)
            pos_hint: {"top": 1 , "left" : 1}
        
        Button:
            text: "Sign Up"
            font_size: "20sp"
            background_color: (1, 0.8, 1, 1)
            color: (1, 1, 1, 1)
            size_hint: (0.20, 0.2)
            pos_hint: {"top" : 1, "right" : 1}

        Label: 
            text : "Email: "
            pos: (-215, -45)
            
        TextInput:
            text: "Email"
            on_touch_down: self.text = ''
            multiline: False
            font_size: "20sp"
            background_color: (1, 1, 1, 0.5)
            color: (1, 1, 1, 1)
            size_hint: (0.40, 0.15)
            pos: (240, 40)
            
        Label: 
            text : "Password: "
            pos: (-215, -84)
    
        TextInput:
            text: "Password"
            on_touch_down: self.text = ''
            multiline: False
            font_size: "20sp"
            background_color: (1, 1, 1, 0.5)
            color: (1, 1, 1, 1)
            size_hint: (0.40, 0.15)
            pos:(240,0)

    RelativeLayout:
        Label:
            text : "Top Projects "
            pos: (0, 0)

    StackLayout:
        Label:
            text : "Top Users "
            pos: (0, 0)

